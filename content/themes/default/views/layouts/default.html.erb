    <div class='container'>

      <ul class='siteFooter__nav'>
        <li><a href='/history'><%= t("themes.default.footer.history", :default => 'Historiek') %></a></li>
        <li><a href='<%= site.website_url %>'><%= t("themes.default.footer.homepage", :default => 'publiq.be') %></a></li>
